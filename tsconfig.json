{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "paths": {
      //brands paths
      "@brands-controllers/*": ["features/brands/controllers/*"],
      "@brands-services/*": ["features/brands/services/*"],
      "@brands-models/*": ["features/brands/models/*"],
      "@brands-routes/*": ["features/brands/routes/*"],
      "@brands-types/*": ["features/brands/types/*"],
      "@brands-validators/*": ["features/brands/validators/*"],
      "@brands-seeders/*": ["features/brands/seeders/*"],
      //categories paths
      "@categories-controllers/*": ["features/categories/controllers/*"],
      "@categories-services/*": ["features/categories/services/*"],
      "@categories-models/*": ["features/categories/models/*"],
      "@categories-routes/*": ["features/categories/routes/*"],
      "@categories-types/*": ["features/categories/types/*"],
      "@categories-validators/*": ["features/categories/validators/*"],
      "@categories-seeders/*": ["features/categories/seeders/*"],
      //products paths
      "@products-controllers/*": ["features/products/controllers/*"],
      "@products-services/*": ["features/products/services/*"],
      "@products-models/*": ["features/products/models/*"],
      "@products-routes/*": ["features/products/routes/*"],
      "@products-types/*": ["features/products/types/*"],
      "@products-validators/*": ["features/products/validators/*"],
      "@products-seeders/*": ["features/products/seeders/*"],
      //users paths
      "@users-controllers/*": ["features/users/controllers/*"],
      "@users-services/*": ["features/users/services/*"],
      "@users-models/*": ["features/users/models/*"],
      "@users-routes/*": ["features/users/routes/*"],
      "@users-types/*": ["features/users/types/*"],
      "@users-validators/*": ["features/users/validators/*"],
      "@users-seeders/*": ["features/users/seeders/*"],
      //sizes paths
      "@sizes-controllers/*": ["features/sizes/controllers/*"],
      "@sizes-services/*": ["features/sizes/services/*"],
      "@sizes-models/*": ["features/sizes/models/*"],
      "@sizes-routes/*": ["features/sizes/routes/*"],
      "@sizes-types/*": ["features/sizes/types/*"],
      "@sizes-validators/*": ["features/sizes/validators/*"],
      "@sizes-seeders/*": ["features/sizes/seeders/*"],
      //variations paths
      "@variations-controllers/*": ["features/variations/controllers/*"],
      "@variations-services/*": ["features/variations/services/*"],
      "@variations-models/*": ["features/variations/models/*"],
      "@variations-routes/*": ["features/variations/routes/*"],
      "@variations-types/*": ["features/variations/types/*"],
      "@variations-validators/*": ["features/variations/validators/*"],
      "@variations-seeders/*": ["features/variations/seeders/*"],
      //event calendar paths
      "@event-calendar-controllers/*": [
        "features/calendar-event/controllers/*"
      ],
      "@event-calendar-services/*": ["features/calendar-event/services/*"],
      "@event-calendar-models/*": ["features/calendar-event/models/*"],
      "@event-calendar-routes/*": ["features/calendar-event/routes/*"],
      "@event-calendar-types/*": ["features/calendar-event/types/*"],
      "@event-calendar-validators/*": ["features/calendar-event/validators/*"],
      "@event-calendar-seeders/*": ["features/calendar-event/seeders/*"],
      //account paths
      "@accounts-controllers/*": ["features/accounts/controllers/*"],
      "@accounts-services/*": ["features/accounts/services/*"],
      "@accounts-models/*": ["features/accounts/models/*"],
      "@accounts-routes/*": ["features/accounts/routes/*"],
      "@accounts-types/*": ["features/accounts/types/*"],
      "@accounts-validators/*": ["features/accounts/validators/*"],
      "@accounts-seeders/*": ["features/accounts/seeders/*"],
      //expense paths
      "@expense-controllers/*": ["features/expense/controllers/*"],
      "@expense-services/*": ["features/expense/services/*"],
      "@expense-models/*": ["features/expense/models/*"],
      "@expense-routes/*": ["features/expense/routes/*"],
      "@expense-types/*": ["features/expense/types/*"],
      "@expense-validators/*": ["features/expense/validators/*"],
      "@expense-seeders/*": ["features/expense/seeders/*"],
      //movement paths
      "@movement-controllers/*": ["features/movements/controllers/*"],
      "@movement-services/*": ["features/movements/services/*"],
      "@movement-models/*": ["features/movements/models/*"],
      "@movement-routes/*": ["features/movements/routes/*"],
      "@movement-types/*": ["features/movements/types/*"],
      "@movement-validators/*": ["features/movements/validators/*"],
      "@movement-seeders/*": ["features/movements/seeders/*"],
      //payment-methods paths
      "@payment-methods-controllers/*": [
        "features/payment-methods/controllers/*"
      ],
      "@payment-methods-services/*": ["features/payment-methods/services/*"],
      "@payment-methods-models/*": ["features/payment-methods/models/*"],
      "@payment-methods-routes/*": ["features/payment-methods/routes/*"],
      "@payment-methods-types/*": ["features/payment-methods/types/*"],
      "@payment-methods-validators/*": [
        "features/payment-methods/validators/*"
      ],
      "@payment-methods-seeders/*": ["features/payment-methods/seeders/*"],
      //debt paths
      "@debt-controllers/*": ["features/debts/controllers/*"],
      "@debt-services/*": ["features/debts/services/*"],
      "@debt-models/*": ["features/debts/models/*"],
      "@debt-routes/*": ["features/debts/routes/*"],
      "@debt-types/*": ["features/debts/types/*"],
      "@debt-validators/*": ["features/debts/validators/*"],
      "@debt-seeders/*": ["features/debts/seeders/*"],
      //notifications paths
      "@routes/*": ["routes/*"],
      "@routes": ["routes/index"],
      "@utils": ["utils/index"],
      "@models": ["models/index"],
      "@models/*": ["models/*"],
      "@lib": ["lib/index"],
      "@lib/*": ["lib/*"],
      "@controllers": ["controllers/index"],
      "@validators": ["validators/index"],
      "@middlewares": ["middlewares/index"]
    }
  }
}
